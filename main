    <script>
        // Animation Keyframes for CSS
        const styleSheet = document.createElement("style");
        styleSheet.innerText = `
            @keyframes swingMotion {
                0%, 100% { transform: rotate(15deg); }
                50% { transform: rotate(-15deg); }
            }
            @keyframes seesawMotion {
                0%, 100% { transform: rotate(8deg); }
                50% { transform: rotate(-8deg); }
            }
            @keyframes jumpSouthPark {
                0%, 100% { transform: translateY(0); }
                50% { transform: translateY(-100px); }
            }
            @keyframes slideSouthPark {
                0% { transform: translate(0, 0) rotate(0deg); opacity: 0; }
                10% { opacity: 1; }
                20% { transform: translate(40px, 10px) rotate(10deg); }
                80% { transform: translate(180px, 220px) rotate(20deg); opacity: 1; }
                90% { opacity: 0; }
                100% { opacity: 0; }
            }
        `;
        document.head.appendChild(styleSheet);

        function triggerJoke() {
            document.getElementById('jokeModal').classList.remove('hidden');
        }

        // Scroll Logic
        const svgElement = document.getElementById('mainStage');
        const scrollIndicator = document.getElementById('scrollIndicator');
        
        // Define Views (ViewBox x, y, width, height)
        // Original: 0 0 1200 800
        const views = [
            { id: 'home', vb: [0, 0, 1200, 800], el: null },
            { id: 'swing', vb: [150, 100, 400, 300], el: document.getElementById('content-swing') }, // Zoom to swing
            { id: 'seesaw', vb: [400, 400, 500, 350], el: document.getElementById('content-seesaw') }, // Zoom to seesaw
            { id: 'trampoline', vb: [800, 450, 350, 250], el: document.getElementById('content-trampoline') }, // Zoom to trampoline
            { id: 'slide', vb: [0, 200, 400, 400], el: document.getElementById('content-slide') } // Zoom to slide
        ];

        window.addEventListener('scroll', () => {
            const maxScroll = document.body.scrollHeight - window.innerHeight;
            const scrollPos = window.scrollY;
            const progress = Math.min(scrollPos / maxScroll, 1);

            // Hide scroll indicator once we start
            if (progress > 0.05) scrollIndicator.style.opacity = 0;
            else scrollIndicator.style.opacity = 1;

            // Determine which section we are in
            // We have 5 views distributed across 0.0 to 1.0
            const segmentSize = 1 / (views.length - 1);
            const currentSegment = Math.floor(progress / segmentSize);
            const nextSegment = Math.min(currentSegment + 1, views.length - 1);
            const segmentProgress = (progress - (currentSegment * segmentSize)) / segmentSize;

            // Interpolate ViewBox
            const startVB = views[currentSegment].vb;
            const endVB = views[nextSegment].vb;

            const currentVB = startVB.map((val, i) => {
                return val + (endVB[i] - val) * easeInOutQuad(segmentProgress);
            });

            svgElement.setAttribute('viewBox', currentVB.join(' '));

            // Handle Content Visibility
            views.forEach((view, index) => {
                if (view.el) {
                    // Show text if we are roughly close to the target view index
                    // We trigger the text when we are closer to the target index than the previous one
                    const targetProgress = index * segmentSize;
                    const distance = Math.abs(progress - targetProgress);
                    
                    if (distance < 0.12) { // If we are within 12% range of the target scroll point
                        view.el.classList.remove('hidden');
                        view.el.classList.add('active');
                    } else {
                        view.el.classList.remove('active');
                        view.el.classList.add('hidden');
                    }
                }
            });
        });

        // Easing function for smoother camera movement
        function easeInOutQuad(t) {
            return t < .5 ? 2 * t * t : -1 + (4 - 2 * t) * t;
        }

    </script>
</body>
</html>
